<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Empleados">

    <Button
        android:id="@+id/btmod3"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:onClick="modificacion"
        android:text="Modificar"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="528dp" />

    <EditText
        android:id="@+id/etcod3"
        android:layout_width="413dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Ingrese codigo artículo"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/etnom3"
        android:layout_width="405dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Ingrese nombre artículo"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="87dp" />

    <EditText
        android:id="@+id/etprecio3"
        android:layout_width="412dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Ingrese precio artículo"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="256dp" />

    <EditText
        android:id="@+id/etcant3"
        android:layout_width="412dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Ingrese cantidad artículo"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="182dp" />

    <Button
        android:id="@+id/btalta3"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:onClick="alta"
        android:text="Crear"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/bteli3"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:onClick="baja"
        android:text="Eliminar"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="443dp" />
</androidx.constraintlayout.widget.ConstraintLayout>